<%= turbo_frame_tag "user_role_#{user.id}" do %>
    <%= form_with(
            model: user,
            url: admin_update_user_path(user),
            local: true
        ) do |f| %>
        <%= f.select :role,
            options_for_select(User.roles.keys.map { |role| [role.humanize, role] }, selected: user.role),
            {},
            {
                onchange: "this.form.requestSubmit();",
                disabled: user == current_user,
                class: "px-2 py-1 border-2 rounded transition-colors duration-[2000ms] border-gray-300 ease-out",
                data: {
                    controller: "role-feedback",
                    role_feedback_change_value: local_assigns[:change].to_s
                }
            } %>
        <%= f.submit "Update", class: "hidden" %>
    <% end %>
<% end %>