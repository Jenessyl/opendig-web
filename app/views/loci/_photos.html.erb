<div class="row">
  <div class="col">
    <h1>Photos</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Date</th>
          <th>Photo Number</th>
          <th>Subject</th>
        </tr>
      </thead>
      <tbody>
        <% @locus.dig('photos').each do |photo| %>
          <tr>
            <td><%= read_date photo["date"] %></td>
            <td><%= photo["number"] %></td>
            <td><%= photo["subject"] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>