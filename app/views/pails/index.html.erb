<div class="container">
  <div class="flex items-center mb-4">
    <div class="w-9/12">
      <h1 class="text-2xl font-semibold">Pails for <%= @area %>.<%= @square %></h1>
    </div>
    <div class="w-3/12 text-right">
      <%= link_to "Back to Loci", area_square_loci_path(@area, @square), class: "px-4 py-2 text-white bg-blue-500 rounded-md hover:bg-blue-600" %>
    </div>
  </div>
  <div class="flex mb-4">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to 'Home', root_path %></li>
        <li class="breadcrumb-item"><%= link_to "Area #{@area}", area_squares_path(@area) %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= "Pails for square #{@square}" %></li>
      </ol>
    </nav>
  </div>
  <div class="flex mb-4">
    <div class="w-3/12">
      <h3 class="text-lg font-semibold">Pail Number</h3>
    </div>
    <div class="w-3/12">
      <h3 class="text-lg font-semibold">Locus</h3>
    </div>
    <div class="w-6/12">
      <h3 class="text-lg font-semibold">Pail Date</h3>
    </div>
  </div>
  <% @pails.each do |pail| %>
    <div class="flex mb-4">
      <div class="w-3/12">
        <%= pail.pail_number %>
      </div>
      <div class="w-3/12">
        <%= link_to "#{pail.locus}", area_square_locus_path(@area, @square, pail.locus), class: "text-blue-500 hover:text-blue-700" %>
      </div>
      <div class="w-6/12">
        <%= pail.pail_date %>
      </div>
    </div>
  <% end %>
</div>
